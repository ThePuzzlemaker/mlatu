{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Mlatu",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#storage"
		},
		{
			"include": "#entities"
		}
	],
	"repository": {
		"comments": {
			"patterns": [
				{
					"name": "comment.line.double-slash",
					"begin": "//",
					"end": "\n"
				}
			]
		},
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.mlatu",
					"match": "\\b(match|case|if|elif|else)\\b"
				}
			]
		},
		"storage": {
			"patterns": [
				{
					"name": "storage.type.mlatu",
					"match": "\\b(instance|type|trait|about|define|vocab)\\b"
				},
				{
					"name": "storage.modifier.mlatu",
					"match": "\\b(intrinsic)\\b"
				}
			]
		},
		"entities": {
			"patterns": [
				{
					"name": "entity.name.type.mlatu",
					"match": "([A-Z]([a-zA-Z0-9]+))"
				}
			]
		},
		"strings": {
			"patterns": [
				{
					"name": "string.quoted.double.mlatu",
					"begin": "\"",
					"end": "\""
				},
				{
					"name": "string.quoted.triple.mlatu",
					"begin": "\"\"\"",
					"end": "\"\"\""
				}
			]
		}
	},
	"scopeName": "source.mlatu"
}