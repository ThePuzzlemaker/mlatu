vocab mlatu {

  intrinsic print (String -> +IO)
  intrinsic get_line (-> String +IO)

  // FIXME: Figure out handles and generalize this.
  intrinsic flush_stdout (-> +IO)

  intrinsic read_file (String -> String +IO)
  intrinsic write_file (String, String -> +IO)
  intrinsic append_file (String, String -> +IO)
}

define print[T] (T -> +IO) /* where (show[T]) */ :
  show _::mlatu::print

define println[T] (T -> +IO):
  print newline

define newline (-> +IO):
  "\n" print

define get_line (-> String +IO):
  _::mlatu::get_line

define ask (String -> String +IO):
  print _::mlatu::flush_stdout get_line

define read_file (String -> String +IO):
  _::mlatu::read_file

define write_file (String, String -> +IO):
  _::mlatu::write_file

define append_file (String, String -> +IO):
  _::mlatu::append_file

permission IO[R..., S..., +P] (R..., (R... -> S... +IO +P) -> S... +P):
  with (+IO)
